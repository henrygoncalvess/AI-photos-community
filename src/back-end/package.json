{
  "name": "ai-photos-community",
  "version": "1.0.0",
  "description": "O sistema desenvolvido é uma plataforma que funciona como uma \"comunidade de fotos\", onde os usuários podem gerar e compartilhar imagens geradas por uma IA. Para acessar as funcionalidades, os usuários precisam se autenticar por meio de um sistema de cadastro simples, sign-up e login (registrar e entrar).",
  "main": "server.ts",
  "scripts": {
    "start": "tsc --noEmit --skipLibCheck && tsx server.ts",
    "dev": "tsc --noEmit --skipLibCheck --pretty && npm run services:up && npm run wait-for-mongodb && tsx --watch server.ts",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "test": "tsc --noEmit --skipLibCheck --pretty && npm run services:up && conc -n fastify,jest -c white,red.bold.underline --hide fastify -k --success command-jest \"tsx server.ts\" \"jest --verbose\"",
    "test:watch": "jest --watchAll --verbose",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint",
    "lint:secretlint:check": "secretlint \"**/*\"",
    "wait-for-mongodb": "tsx infra/scripts/wait-for-mongodb.ts",
    "prepare": "cd ../../ && husky src/back-end/.husky",
    "commit": "cz"
  },
  "dependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/static": "8.2.0",
    "@fastify/swagger": "9.5.1",
    "@scalar/fastify-api-reference": "1.32.1",
    "async-retry": "1.3.3",
    "axios": "1.11.0",
    "bcryptjs": "3.0.2",
    "dotenv": "16.6.1",
    "fastify": "5.4.0",
    "fastify-type-provider-zod": "5.0.1",
    "form-data": "4.0.4",
    "jsonwebtoken": "9.0.2",
    "mongodb": "6.17.0",
    "nodemailer": "7.0.3",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.29.0",
    "@secretlint/secretlint-rule-preset-recommend": "10.1.1",
    "@types/bcryptjs": "2.4.6",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mongodb": "4.0.6",
    "@types/node": "24.0.6",
    "@types/nodemailer": "6.4.17",
    "commitizen": "4.3.1",
    "concurrently": "9.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.29.0",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "jest": "30.0.3",
    "prettier": "3.6.2",
    "secretlint": "10.1.1",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0"
  },
  "author": "Henry Gonçalves",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./src/back-end/node_modules/cz-conventional-changelog"
    }
  }
}
